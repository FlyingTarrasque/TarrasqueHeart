<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>tarrasque-sample</display-name>

  <servlet>
    <servlet-name>TarrasqueServletDispatcher</servlet-name>
    <servlet-class>groovy.tarrasque.TarrasqueServletDispatcher</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TarrasqueServletDispatcher</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>